{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "Node16",
    "allowJs": true,
    "removeComments": true,
    "target": "ES6",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "paths": {
      "core/*": [
        "src/core/*"
      ],
      "scripts/*": [
        "src/scripts/*"
      ],
      "game-objects/*": [
        "src/game-objects/*"
      ],
      "utils": [
        "src/utils"
      ],
      "typings": [
        "src/typings"
      ]
    },
    "sourceMap": true,
    "sourceRoot": "/",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
