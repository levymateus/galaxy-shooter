{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "target": "ES6",
    "baseUrl": "./",
    "rootDirs": ["src", "assets"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["src/*"],
      "assets/*": ["assets/*"],
      "res/*": ["assets/res/*"],
      "sprites/*": ["assets/sprites/*"],
      "app/*": ["src/app/*"],
      "typings/*": ["src/typings/*"]
    },
    "sourceMap": true,
    "sourceRoot": "/",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
